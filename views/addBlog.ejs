<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head.ejs') %>
  <title>Add New Blog</title>
</head>
<body>
<%- include('./partials/nav.ejs') %>
<div class="container mt-3">
  <form action="/blog" method="post" enctype="multipart/form-data">
    <div class="mb-3">
      <label for="coverImage" class="form-label">Cover Image</label>
      <input type="file" class="form-control" id="coverImage"  name="coverImage" aria-describedby="coverImage">
    </div>
    <div class="mb-3">
      <label for="title" class="form-label">Title</label>
      <input type="text" class="form-control" id="title" placeholder="Enter title" name="title">
    </div>
    <div class="mb-3">
      <label for="floatingTextarea" class="form-label">Body</label>
      <div class="form-floating">
        <textarea class="form-control" placeholder="Start writing Blog..." id="floatingTextarea" name="body"></textarea>
      </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>
<%- include('./partials/script.ejs') %>
</body>
</html>